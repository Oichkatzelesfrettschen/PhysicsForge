* text=auto

# Normalize common text files
*.py text eol=lf
*.md text eol=lf
*.tex text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.ps1 text eol=crlf
Makefile text eol=lf

# Treat archives and binaries as binary
*.pdf binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.zip binary
*.7z binary
*.gz binary
*.bz2 binary
